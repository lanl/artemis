<artemis>
problem = disk              # name of the pgen
coordinates = axisymmetric  # coordinate system

<parthenon/job>
problem_id = disk  # problem ID: basename of output filenames

<parthenon/output1>
variables = gas.prim.density,  &
            gas.prim.velocity, &
            gas.prim.pressure
file_type = hdf5   # HDF5 data dump
dt        = 6.28   # time increment between outputs

<parthenon/time>
nlim       = 1     # cycle limit
tlim       = 628.  # time limit
integrator = rk2   # time integration algorithm
ncycle_out = 1     # interval for stdout summary info

<parthenon/mesh>
nx1    = 128                 # Number of zones in X1-direction
x1min  = 0.3                 # minimum value of X1
x1max  = 4.3                 # maximum value of X1
ix1_bc = viscous             # Inner-X1 boundary condition flag
ox1_bc = viscous             # Outer-X1 boundary condition flag

nx2    = 1                   # Number of zones in X2-direction
x2min  = -3.141592653589793  # minimum value of X2
x2max  = 3.141592653589793   # maximum value of X2
ix2_bc = periodic            # Inner-X2 boundary condition flag
ox2_bc = periodic            # Outer-X2 boundary condition flag

nx3    = 1                   # Number of zones in X3-direction
x3min  = -0.5                # minimum value of X3
x3max  =  0.5                # maximum value of X3
ix3_bc = periodic            # Inner-X3 boundary condition flag
ox3_bc = periodic            # Outer-X3 boundary condition flag

<parthenon/meshblock>
nx1 = 128  # Number of cells in each MeshBlock, X1-dir
nx2 = 1    # Number of cells in each MeshBlock, X2-dir
nx3 = 1    # Number of cells in each MeshBlock, X3-dir

<physics>
gas = true
gravity = true
viscosity = true
cooling = true


<gas>
cfl = 0.3
gamma = 1.4
reconstruct = plm
riemann = hllc
dfloor = 1.0e-10
siefloor = 1.0e-10

<gas/viscosity>
type = alpha
alpha = 1e-2

<gravity>
gm = 1.0
<gravity/point>

<cooling>
type = beta
beta0 = 1e-8
tref = powerlaw
tcyl = 0.0025
cyl_plaw = -1.0

<problem>
r0 = 1.0
mdot = 0.00023561944901923456   # Mdot we feed the outer boundary with
dslope = -0.5
flare = 0.0
h0 = 0.05
dens_min = 1.0e-10
pres_min = 1.0e-15
polytropic_index = 1
